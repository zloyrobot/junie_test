	"name": "Dev Container with Java, Gradle, Python, and npm",
	"image": "mcr.microsoft.com/devcontainers/base:jammy", // Ubuntu 22.04

	//https://github.com/devcontainers/features
	"features": {
		"ghcr.io/devcontainers/features/java:1": {
